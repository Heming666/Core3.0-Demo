@using DBModel.Models
@model Department
@{
}

<form asp-controller="Department" asp-action="AddDepart" class="col-md-4 offset-md-4" method="post">
    <div class="form-group">
        <input asp-for="DeptId" value="@Model.DeptId" type="hidden" />
        <label asp-for="DeptName">部门名称</label>
        <input asp-for="DeptName" class="form-control" placeholder="部门名称" value="" />
        <span asp-validation-for="DeptName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Location">部门所在地</label>
        <input asp-for="Location" class="form-control" placeholder="部门所在地" value="" />
        <span asp-validation-for="Location" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">
        <i class="glyphicon glyphicon-ok" aria-hidden="true"></i> 确认
    </button>
</form>
